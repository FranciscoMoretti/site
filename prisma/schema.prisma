// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")

  relationMode = "prisma"
}


model Post {
  id        String   @id @default(cuid())
  slug      String   @unique
  views     Int      @default(0)

  @@map(name: "posts")
}
